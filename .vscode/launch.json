{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NIM2",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/NIM2.exe", // Path to your executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Use an external terminal for better compatibility
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe", // Path to GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build" // Ensure the project is built before debugging
        }
    ]
}