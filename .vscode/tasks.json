{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                             // Enable debug symbols
                "-Iinclude",
                "-Ienums",
                "src/*.cpp",
                "-o",
                "main",
                "-lpdcurses"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
